@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

<div class="login-box " style="position:relative; z-index:100; width:35%;">
    <div class="login-logo">
    </div>
    <div class="card p-4">
        <h1 style="background:#fff  " class=" text-center p-2 "><b class="mx-2 text-dark">AUIB</b> <span style="color:#aa0c3c">FM</span></h1>
        <div class="card-body login-card-body">
            <p class="login-box-msg">enter your email ti receive password reset message</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                           <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn  btn-block" style="background:#aa0c3c; color:#fff;">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

