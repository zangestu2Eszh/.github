                    <label asp-for="StatiscFourIcon" for="file-upload5">Upload Statisc Four Icon</label>
                    <input asp-for="StatiscFourIcon" class="form-control" type="file" id="file-upload5" onchange="previewImages(`image-preview-container5`);" />
                    <span asp-validation-for="StatiscFourIcon" class="text-danger"></span>
                </div>
                </div>
            </div>

            <br />
            <div class="row form-group" style="justify-content: center;">
                <input type="submit" value="Save" class="btn btn-success col-sm-3 mr-2" />
            </div>
        </form>
    </div>
</div>

<script src="~/dist/js/CustemScript/ImagePreview.js"></script>
