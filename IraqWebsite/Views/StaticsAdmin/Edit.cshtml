                                <input type="number" asp-for="StatiscTwoNumber" class="form-control" />
                                <span asp-validation-for="StatiscTwoNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="StatiscThreeTitle" class="control-label"></label>
                                <input asp-for="StatiscThreeTitle" class="form-control" />
                                <span asp-validation-for="StatiscThreeTitle" class="text-danger"></span>
