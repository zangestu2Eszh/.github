                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="StatiscFourNumber" class="control-label"> Statisc Four Number</label>
                                <input type="number" asp-for="StatiscFourNumber" class="form-control" />
                                <span asp-validation-for="StatiscFourNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-md-12">
                    <div class="image-preview image-preview-container">
                    <div class="preview">
                        <div id="preview-selected-images">
                             @if(ViewBag.Image != null)
                            {
                                <img src="@ViewBag.Image" class="preview-image" >
                            }
                        </div>
                    </div>
                    <label asp-for="Image" for="file-upload">Upload Section Image</label>
                    <input asp-for="Image" class="form-control" type="file" id="file-upload" onchange="previewImages(`image-preview-container`);" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                </div>
                <div class="col-md-3">
                    <div class="image-preview image-preview-container2">
                    <div class="preview">
                        <div id="preview-selected-images">
                             @if(ViewBag.StatiscOneIcon != null)
                            {
                                <img src="@ViewBag.StatiscOneIcon" class="preview-image" >
