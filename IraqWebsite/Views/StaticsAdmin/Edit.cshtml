                                <input asp-for="StatiscThreeTitleAr" class="form-control" />
                                <span asp-validation-for="StatiscThreeTitleAr" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="StatiscThreeNumber" class="control-label"> Statisc Three Number</label>
                                <input type="number" asp-for="StatiscThreeNumber" class="form-control" />
                                <span asp-validation-for="StatiscThreeNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
                <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="StatiscFourTitle" class="control-label"></label>
                                <input asp-for="StatiscFourTitle" class="form-control" />
