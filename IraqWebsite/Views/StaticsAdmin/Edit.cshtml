                                <label asp-for="StatiscOneNumber" class="control-label"> Statisc One Number</label>
                                <input type="number" asp-for="StatiscOneNumber" class="form-control" />
                                <span asp-validation-for="StatiscOneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
             <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="StatiscTwoTitle" class="control-label"></label>
                                <input asp-for="StatiscTwoTitle" class="form-control" />
                                <span asp-validation-for="StatiscTwoTitle" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for=" StatiscTwoTitleAr" class="control-label"> Statisc Two Title Arabic</label>
                                <input asp-for="StatiscTwoTitleAr" class="form-control" />
                                <span asp-validation-for="StatiscTwoTitleAr" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
