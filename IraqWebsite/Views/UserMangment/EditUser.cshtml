<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create New User</h3>
    </div>
    <div class="card-body">
        <form asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["Message"] != null)
            {
                <h3 style="color:red">@TempData["Message"]</h3>
            }
            else
            {
                <br />

                <br />
            }
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.FirstName" class="control-label">First Name</label>
                        <input asp-for="RigsterViewModel.FirstName" type="text" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.LastName" class="control-label">Last Name</label>
                        <input asp-for="RigsterViewModel.LastName" type="text" class="form-control" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Birthday" class="control-label">Birhdate</label>
                        <input asp-for="RigsterViewModel.Birthday" class="form-control" type="date">
                        <span asp-validation-for="RigsterViewModel.Birthday" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Email" class="control-label">Email</label>
                        <input asp-for="RigsterViewModel.Email" class="form-control" type="text" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.Email" class="text-danger"></span>
                    </div>
                </div>
               <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Company" class="control-label">Company</label>
                        <input asp-for="RigsterViewModel.Company" class="form-control" type="text" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.Company" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Password" class="control-label">Password</label>
                        <input asp-for="RigsterViewModel.Password" class="form-control" type="password" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="RigsterViewModel.ConfirmPassword" class="form-control" type="password" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Phone" class="control-label">Phone</label>
                        <input asp-for="RigsterViewModel.Phone" class="form-control" type="text" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.IpPhone" class="control-label">Ip Phone</label>
                        <input asp-for="RigsterViewModel.IpPhone" class="form-control" type="text" placeholder="Enter ...">
                        <span asp-validation-for="RigsterViewModel.IpPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RigsterViewModel.Gender" class="control-label">Gender</label>
                        <select asp-for="RigsterViewModel.Gender" class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span asp-validation-for="RigsterViewModel.Gender" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Active" class="form-label" style="font-size:17px;margin-right:20px!important">
                            <input class="form-check-input" style="margin-left:0!important;position:relative" asp-for="Active" />
                            Make As Active
                        </label>
                    </div>
                </div>
                
            </div>
            <div class="row form-group" style="justify-content: center;">
                <input type="submit" value="Create" class="btn btn-success col-sm-3 mr-2" />
                <a class="btn btn-danger col-sm-3" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>