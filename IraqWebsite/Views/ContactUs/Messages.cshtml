@model List<IraqWebsite.Models.CustemerReview>
@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

@if (Model is not null)
{
    <div class="card">
        <div class="card-header">
            <h3>Visitors Messages</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Email</td>
                            <td>@item.FullName</td>
                            <td>@item.SentDate</td>
                            <td>@item.Message</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
