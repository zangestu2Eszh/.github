                </div>
               
            </div>
        </div>
    </section>
    <section class="position-relative put-rtl"  style="background: url(./assets/img/slider.jpg) center; background-size: cover;">
        <div class="overlay" style="background: rgba(0, 0, 0, 0.5); position: absolute; left: 0px; top: 0px; width: 100%; height: 100%;  z-index: 2;"></div>
        <div class="container" style="position: relative; z-index: 10;">
            <div class="row gx-60">
                <div class="col-xl-6 align-self-center space  wow fadeInUp" data-wow-delay="0.2s">
                <span class="sec-subtitle text-white">@ViewData["MAKEANAPPOINTMENT"]</span>
                    <h2 class="sec-title3 h1 text-white">@ViewData["WeProvideBestAdviceForYourFuture"]</h2>
                    <hr class="hr-style1">
                    <div class="row gy-30">
                        <div class="col-md-6">
                            <div class="contact-media">
                                <div class="contact-media__icon"><i class="fal fa-phone-alt"></i></div>
                                <div class="media-body">
                                <span class="contact-media__label">@ViewData["CALLUs"]</span>
                                    <p class="contact-media__info"><a href="tel:+0423565446789">@ViewBag.Contact.Phone</a></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-media">
                                <div class="contact-media__icon"><i class="fal fa-envelope"></i></div>
