@model ICollection<AcadmeicTraining>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 d-flex justify-content-between">
                <h3>Acadmeic Training</h3>
            </div>
        </div>
    </div>
</section>
<div class="card">
    <div class="card-header">
        @if(@Model.Count() == 0) {
            <a type="button" class="btn btn-primary" asp-action="Create">Create New</a>
        }
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>

                    @if (User.HasClaim("Permission", "Role Policy Edit") || User.HasClaim("Permission", "Role Policy Delete"))
                    {
                        <th>Action</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td><img width="75" height="75" src="@item.ImageOne" /></td>
                        <td>@item.Title</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                @*@if (User.HasClaim("Permission", "Role Policy Edit"))*@
                                @*{*@
                                    <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                                @*}*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
